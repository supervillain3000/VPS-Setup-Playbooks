
server {
        server_name {{ (vhost | default(nginx_domain)) | trim }} www.{{ (vhost | default(nginx_domain)) | trim }};

        listen 80;
        {%- if ansible_default_ipv6.address is defined %}
        listen [::]:80;
        {%- endif %}

        index index.php index.html;

        disable_symlinks if_not_owner from=$root_path;

        access_log /var/log/nginx/{{ (vhost | default(nginx_domain)) | trim }}.access.log;
        error_log /var/log/nginx/{{ (vhost | default(nginx_domain)) | trim }}.error.log notice;

        set $root_path /var/www/{{ (vhost | default(nginx_domain)) | trim }};
        root $root_path;

        ## handler ##

        location ~* \.(ac3|avi|bmp|bz2|css|cue|dat|doc|docx|dts|eot|exe|flv|gif|gz|htm|html|ico|img|iso|jpeg|jpg|js|mkv|mp3|mp4|mpeg|mpg|ogg|pdf|png|ppt|pptx|qt|rar|rm|svg|swf|tar|tgz|ttf|txt|wav|woff|woff2|xls|xlsx|zip)$ {
                root /var/www/{{ (vhost | default(nginx_domain)) | trim }}/;
                expires max;
        }
}
